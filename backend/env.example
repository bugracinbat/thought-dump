# Database
DATABASE_URL="postgresql://username:password@localhost:5432/thoughtdump?schema=public"

# Server
PORT=3001
NODE_ENV=development

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-here

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@thoughtdump.com
ADMIN_PASSWORD=change-this-password

# Optional: For IP-based anonymous voting
HASH_SECRET=your-hash-secret-for-anonymous-users 